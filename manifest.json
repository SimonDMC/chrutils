{
    "manifest_version": 3,
    "name": "Chrutils",
    "description": "Personal utility extension",
    "version": "0.1",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["chrutils.js"]
        }
    ],
    "permissions": ["tabs", "storage", "scripting"]
}
