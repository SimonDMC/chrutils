{
    "manifest_version": 3,
    "name": "Chrutils",
    "description": "Personal utility extension for Chrome",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "imgs/icon-full.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["chrutils.js"]
        }
    ],
    "permissions": ["tabs", "storage", "scripting"],
    "icons": {
        "16": "imgs/icon-16.png",
        "32": "imgs/icon-32.png",
        "48": "imgs/icon-48.png",
        "128": "imgs/icon-128.png"
    }
}
